  project-dir = pa-run-command


# generate cabal.project
build cabal.project : generate-cabal.project | cabal.project.mustache project.json
  cabal-project-template = cabal.project.mustache
  project-json = project.json

# generate hie.yaml
build hie.yaml : generate-hie.yaml | hie.yaml.mustache project.json
  hie-yaml-template = hie.yaml.mustache
  project-json = project.json

# build all packages
build build-all $
: cabal-build hie.yaml cabal.project $
  pa-prelude/pa-prelude.cabal $
  pa-label/pa-label.cabal $
  pa-error-tree/pa-error-tree.cabal $
  pa-field-parser/pa-field-parser.cabal $
  pa-json/pa-json.cabal $
  pa-pretty/pa-pretty.cabal $
  pa-run-command/pa-run-command.cabal
  target = all
