  project-dir = pa-error-tree

build pa-field-parser/LICENSE : copy-license
build $builddir/pa-field-parser.cabal.json : generate-cabal-file-data | project.json
  cabal-package = pa-field-parser
  project-json = project.json
build pa-field-parser/pa-field-parser.cabal : generate-cabal-file $builddir/pa-field-parser.cabal.json | pa-template.cabal.mustache
  cabal-template = pa-template.cabal.mustache
  project-dir = pa-field-parser

build pa-json/LICENSE : copy-license
build $builddir/pa-json.cabal.json : generate-cabal-file-data | project.json
  cabal-package = pa-json
  project-json = project.json
build pa-json/pa-json.cabal : generate-cabal-file $builddir/pa-json.cabal.json | pa-template.cabal.mustache
  cabal-template = pa-template.cabal.mustache
  project-dir = pa-json

build pa-pretty/LICENSE : copy-license
build $builddir/pa-pretty.cabal.json : generate-cabal-file-data | project.json
  cabal-package = pa-pretty
  project-json = project.json
build pa-pretty/pa-pretty.cabal : generate-cabal-file $builddir/pa-pretty.cabal.json | pa-template.cabal.mustache
